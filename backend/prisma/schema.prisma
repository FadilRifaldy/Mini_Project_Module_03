generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Categories {
  Music
  Education
  Business
  Technology
  Sports
  Art
  Festival
  Workshop
  Conference
  Community
  Charity
  Entertainment
  Health
  Food
  Travel
  Gaming
  Fashion
  Film
  Literature
  Religion
}

model Event {
  id               String      @id @default(uuid())
  category         Categories?
  title            String
  imgUrl           String?
  content          String?
  startDate        DateTime
  endDate          DateTime
  location         String
  price            Float
  totalTickets     Int
  availableTickets Int
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  Voucher          Voucher?    @relation("EventVoucher")
  Transaction      Transaction[]
  User User @relation(fields: [userId],references: [id])
  userId String
}

model Voucher {
  id         String   @id @default(uuid())
  discount   Decimal  @db.Decimal(5, 2)
  quantity   Int      @default(1)
  createdAt  DateTime @default(now())
  validFrom  DateTime?
  validUntil DateTime?
  eventId    String   @unique
  Event      Event    @relation("EventVoucher", fields: [eventId], references: [id])
}

enum Statuses{
  PENDING
  SUCCESS
  FAILED
  CANCELLED
}

enum PaymentMethod{
  TRANSFER
  CREDIT
  EWALLET
  VIRTUAL
}

model Transaction{
  id String @id @default(uuid())
  // quantity Int
  totalPrice Int
  transactionStatuses Statuses? @default(PENDING)
  paymentMethod PaymentMethod?
  paymentProof String
  transactionDate DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  eventId String
  Event Event @relation(fields: [eventId], references: [id])
}

enum UserType {
  Customer
  EventOrganizer
}

model User {
  id String @id @default(uuid())
  username String
  email String @unique
  password String
  type UserType
  photoProfile String @default("https://res.cloudinary.com/digiiidiw/image/upload/v1761573444/neon-black-profile-icon-with-bold-glowing-effects-modern-sleek-designsprofile-icon-neon-black-style-offering-unique-striking-visual-appearance_165002-8298_an5sjp.jpg")
  referralCode String @unique @default(uuid())
  Coupon Coupon[]
  ReferralPoint ReferralPoint[]
  Events Event[]
}

model ReferralPoint {
  id String @id @default(uuid())
  Referral User @relation(fields: [referralCode], references: [referralCode])
  referralCode String
  referralPoint Int @default(10000)
  expiredAt DateTime
  isUsed Boolean @default(false)
}

model Coupon {
  id String @id @default(uuid())
  User User @relation(fields: [userId],references: [id])
  userId String
  discount Int @default(10000)
  expiredAt DateTime
  isUsed Boolean @default(false)
}